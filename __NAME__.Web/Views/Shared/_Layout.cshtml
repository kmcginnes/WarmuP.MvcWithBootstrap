@using StackExchange.Profiling
<!DOCTYPE html>
<html lang="en">
    <head>
        @this.InitClientTimings()
        <meta charset="utf-8">
        <title>Template &middot; Bootstrap</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">

        <!-- Le styles -->
        @this.TimeScript("Bootstrap 2.3.2",
            @<link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css" rel="stylesheet" />)
        @this.TimeScript("Font Awesome",
            @<link href="//netdna.bootstrapcdn.com/font-awesome/3.2.0/css/font-awesome.css" rel="stylesheet" />)
        <style type="text/css">
            body {
                padding-top: 20px;
                padding-bottom: 40px;
            }

            /* Custom container */
            .container-narrow {
                margin: 0 auto;
                max-width: 700px;
            }
            .container-narrow > hr {
                margin: 30px 0;
            }

            /* Main marketing message and sign up button */
            .jumbotron {
                margin: 60px 0;
                text-align: center;
            }
            .jumbotron h1 {
                font-size: 72px;
                line-height: 1;
            }
            .jumbotron .btn {
                font-size: 21px;
                padding: 14px 24px;
            }
            .jumbotron i {
                float: left;
                font-size: 290px;
                color: #9d261d;
                text-shadow: 2px 2px 3px #222222;
            }

            /* Supporting marketing content */
            .marketing {
                margin: 60px 0;
            }
            .marketing p + h4 {
                margin-top: 28px;
            }
        </style>

        <!-- Fav and touch icons -->
        <link rel="apple-touch-icon-precomposed" sizes="144x144" href="@Url.Content("../Content/ico/apple-touch-icon-144-precomposed.png")">
        <link rel="apple-touch-icon-precomposed" sizes="114x114" href="@Url.Content("../Content/ico/apple-touch-icon-114-precomposed.png")">
        <link rel="apple-touch-icon-precomposed" sizes="72x72" href="@Url.Content("../Content/ico/apple-touch-icon-72-precomposed.png")">
        <link rel="apple-touch-icon-precomposed" href="@Url.Content("../Content/ico/apple-touch-icon-57-precomposed.png")">
        <link rel="shortcut icon" href="@Url.Content("../Content/ico/favicon.png")">
    </head>

    <body>

        <div class="container-narrow">
            <div class="masthead">
                <ul class="nav nav-pills pull-right">
                    <li class="active"><a href="@Url.Action("Index", "Home")"><i class="icon-home"></i>Home</a></li>
                    <li><a href="@Url.Action("Index", "About")"><i class="icon-info-sign"></i>About</a></li>
                    <li><a href="#"><i class="icon-envelope"></i>Contact</a></li>
                </ul>
                <h3 class="muted"><i class="icon-globe"></i> SpaceX ERP</h3>
            </div>

            <hr>
            
            <div id="pjax-container">
                @RenderBody()
            </div>

            <hr>

            <div class="footer">
                <p>&copy; SpaceX 2013</p>
            </div>

        </div> <!-- /container -->

        <!-- Le javascript
            ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        @this.TimeScript("jQuery",
            @<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>)
        @this.TimeScript("jQuery PJAX",
            @<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.pjax/1.7.0/jquery.pjax.min.js"></script>)
        @this.TimeScript("Bootstrap JS",
            @<script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>)
        @this.TimeScript("App.less",
            @<script src="@Url.Content("../Scripts/App.coffee")"></script>)

        @RenderSection("Scripts", false)
        @MiniProfiler.RenderIncludes()
    </body>
</html>
